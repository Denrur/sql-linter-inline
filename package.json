{
  "name": "sql-linter-inline",
  "displayName": "sql-linter-inline",
  "description": "Support inline sql strings in python",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linterSQL.updateTables",
        "title": "Update tables"
      }
    ],
    "keybindings": [
      {
        "command": "linterSQL.updateTables",
        "key": "ctrl+shift+q",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "sql-linter-inline",
      "properties": {
        "linterSQL.dbHost": {
          "type": "string",
          "default": "localhost",
          "markdownDescription": "Database host address."
        },
        "linterSQL.dbPort": {
          "type": "number",
          "default": 5432,
          "markdownDescription": "Database port."
        },
        "linterSQL.dbUser": {
          "type": "string",
          "default": "postgres",
          "markdownDescription": "Database user."
        },
        "linterSQL.dbPassword": {
          "type": "string",
          "default": "postgres",
          "markdownDescription": "Database password."
        },
        "linterSQL.dbType": {
          "type": "string",
          "enum": [
            "postgres",
            "sqlite",
            "sqlserver"
          ],
          "default": "postgres",
          "markdownDescription": "Type of the database."
        },
        "linterSQL.dbPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to the SQLite database file."
        },
        "linterSQL.dbName": {
          "type": "string",
          "default": "",
          "markdownDescription": "Database name"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/pg": "^8.11.10",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "node-sql-parser": "^5.3.6",
    "pg": "^8.13.1"
  }
}
